<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景图 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#54544f"
                android:centerY="0.75"
                android:endColor="#54544f"
                android:startColor="#54544f" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#868787"
                    android:centerY="0.75"
                    android:endColor="#868787"
                    android:startColor="#868787" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:centerX="0.55"
                    android:endColor="#7a4fc9"
                    android:startColor="#418ccd" />
            </shape>
        </clip>
    </item>
</layer-list>