<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="#E6f8f8f9"
    android:gravity="center"
    android:layout_height="@dimen/public_main_title_height">

    <ImageButton
        android:id="@+id/app_title_search"
        android:layout_width="@dimen/public_title_height"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@null"
        android:src="@drawable/nav_icon_search" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/nav_logo" />

    <ImageButton
        android:id="@+id/app_title_in_vr"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/nav_icon_invr" />
</RelativeLayout>
