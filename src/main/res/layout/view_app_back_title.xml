<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_title_height">

        <ImageButton
            android:id="@+id/app_title_back_imagebtn"
            style="@style/app_title_back_btn_style" />

        <TextView
            android:id="@+id/app_title_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/app_title_back_imagebtn"
            android:gravity="center"
            android:padding="10dp"
            android:visibility="gone"
            android:text="关闭"/>

        <TextView
            android:id="@+id/app_title_name"
            style="@style/app_title_text_style"/>

        <ImageButton
            android:id="@+id/app_title_in_vr_imagebtn"
            android:layout_width="@dimen/public_title_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/nav_icon_invr" />

        <TextView
            android:id="@+id/app_title_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:text="@null"
            android:textColor="@color/tab_normal_text_color"
            android:textSize="16sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_top_line"
        android:layout_below="@id/app_title_right"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/divider_color" />
</LinearLayout>