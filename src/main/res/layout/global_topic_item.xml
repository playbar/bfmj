<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/global_topic_banner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_default_banner"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/special_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/title_color"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/title_text_size" />

    <TextView
        android:id="@+id/special_des"
        style="@style/view_more_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginBottom="23.3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
</LinearLayout>