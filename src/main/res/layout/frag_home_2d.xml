<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <com.baofeng.mj.ui.view.TabContainer
        android:id="@+id/home_2d_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal" />

    <View
        android:id="@+id/home_2d_line"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:layout_below="@id/home_2d_radiogroup"
        android:background="@color/divider_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/home_2d_viewpager"
        android:layout_below="@id/home_2d_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.baofeng.mj.ui.view.EmptyView
        android:id="@+id/home_2d_empty_view"
        android:visibility="gone"
        android:layout_below="@id/home_2d_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
