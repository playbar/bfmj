<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rank_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/imageview_rank_bg"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="220dp"
        android:layout_height="12dp"
        android:background="@drawable/mj_rank_title_bg"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/rank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="新排行"
        android:textColor="@color/white"
        android:textSize="@dimen/rank_title_text_size" />

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="106dp"
                android:background="@color/mj_color_white"/>

            <FrameLayout
                android:id="@+id/game_rank_2_icon_layout"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <ImageView
                    android:id="@+id/game_rank_2_icon"
                    android:layout_width="66.7dp"
                    android:layout_height="66.7dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/img_default_4n"/>

                <ImageView
                    android:id="@+id/game_rank_2_icon_stickgame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="21dp"
                    android:visibility="gone"
                    android:src="@drawable/market_icon_game"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/imageview_icon_top2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/game_rank_2_icon_layout"
                android:background="@drawable/mj_rank_icon_top2"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/game_rank_2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageview_icon_top2"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/title_color"
                android:textSize="@dimen/content_text_size" />

            <TextView
                android:id="@+id/game_rank_2_down_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/game_rank_2_name"
                android:singleLine="true"
                android:textColor="@color/prompt_color"
                android:textSize="@dimen/warn_text_size" />

            <Button
                android:id="@+id/game_rank_2_btn"
                android:layout_width="56.7dp"
                android:layout_height="26.7dp"
                android:layout_below="@id/game_rank_2_down_no"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_blue_bg"
                android:text="下载"
                android:textColor="@color/theme_auxiliary_color"
                android:textSize="@dimen/btn_text_size" />

        </RelativeLayout>

        <View
            android:layout_width="0.3dp"
            android:layout_height="131dp"
            android:layout_gravity="bottom"
            android:background="#dddddd" />

        <RelativeLayout
            android:id="@+id/layout_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="90dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="37dp"
                    android:background="@drawable/mj_rank_icon_top1" />

                <TextView
                    android:id="@+id/game_rank_1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/content_text_size" />

                <TextView
                    android:id="@+id/game_rank_1_down_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/prompt_color"
                    android:textSize="@dimen/warn_text_size" />

                <Button
                    android:id="@+id/game_rank_1_btn"
                    android:layout_width="56.7dp"
                    android:layout_height="26.7dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/corner_blue_bg"
                    android:text="下载"
                    android:textColor="@color/theme_auxiliary_color"
                    android:textSize="@dimen/btn_text_size" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/game_rank_1_icon_layout"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <ImageView
                    android:id="@+id/game_rank_1_icon"
                    android:layout_width="66.7dp"
                    android:layout_height="66.7dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="54.3dp"
                    android:src="@drawable/img_default_4n"/>

                <ImageView
                    android:id="@+id/game_rank_1_icon_stickgame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="21dp"
                    android:visibility="gone"
                    android:src="@drawable/market_icon_game"/>
            </FrameLayout>

        </RelativeLayout>

        <View
            android:layout_width="0.3dp"
            android:layout_height="131dp"
            android:layout_gravity="bottom"
            android:background="#dddddd" />

        <RelativeLayout
            android:id="@+id/layout_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="106dp"
                android:background="@color/mj_color_white"/>
            <FrameLayout
                android:id="@+id/game_rank_3_icon_layout"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <ImageView
                    android:id="@+id/game_rank_3_icon"
                    android:layout_width="66.7dp"
                    android:layout_height="66.7dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/img_default_4n"/>

                <ImageView
                    android:id="@+id/game_rank_3_icon_stickgame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="21dp"
                    android:visibility="gone"
                    android:src="@drawable/market_icon_game"/>

            </FrameLayout>
            <ImageView
                android:id="@+id/imageview_icon_top3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/game_rank_3_icon_layout"
                android:background="@drawable/mj_rank_icon_top3"
                android:layout_marginTop="5dp"
                />


            <TextView
                android:id="@+id/game_rank_3_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageview_icon_top3"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/title_color"
                android:textSize="@dimen/content_text_size" />

            <TextView
                android:id="@+id/game_rank_3_down_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/game_rank_3_name"
                android:singleLine="true"
                android:textColor="@color/prompt_color"
                android:textSize="@dimen/warn_text_size" />

            <Button
                android:id="@+id/game_rank_3_btn"
                android:layout_width="56.7dp"
                android:layout_height="26.7dp"
                android:layout_below="@id/game_rank_3_down_no"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_blue_bg"
                android:text="下载"
                android:textColor="@color/theme_auxiliary_color"
                android:textSize="@dimen/btn_text_size" />
        </RelativeLayout>

    </LinearLayout>



    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/layout_1"
        android:background="#dddddd" />

    <RelativeLayout
        android:id="@+id/rank_layout_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/game_rank_4_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:paddingRight="13.3dp"
            android:text="4"
            android:textColor="@color/prompt_color"
            android:textSize="@dimen/title_text_size" />

        <FrameLayout
            android:id="@+id/game_rank_4_icon_layout"
            android:layout_toRightOf="@id/game_rank_4_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/game_rank_4_icon"
                android:layout_width="66.7dp"
                android:layout_height="66.7dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"

                android:scaleType="centerCrop"
                android:src="@drawable/img_default_4n"/>

            <ImageView
                android:id="@+id/game_rank_4_icon_stickgame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/market_icon_game"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/game_rank_4_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/game_rank_4_icon_layout"
            android:paddingLeft="10dp"
            android:paddingTop="16.7dp">

            <TextView
                android:id="@+id/game_rank_4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:id="@+id/game_rank_4_download_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/game_rank_4_name"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/prompt_color"
                android:textSize="@dimen/content_text_size" />

            <TextView
                android:id="@+id/game_rank_4_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/game_rank_4_name"
                android:layout_toRightOf="@id/game_rank_4_download_no"
                android:singleLine="true"
                android:textColor="@color/prompt_color"
                android:textSize="@dimen/content_text_size" />

        </RelativeLayout>

        <Button
            android:id="@+id/game_rank_4_btn"
            android:layout_width="56.7dp"
            android:layout_height="26.7dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_blue_bg"
            android:text="下载"
            android:textColor="@color/theme_auxiliary_color"
            android:textSize="@dimen/btn_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/game_rank_4_icon_layout"
            android:background="#dddddd" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rank_layout_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rank_layout_4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/game_rank_5_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingRight="13.3dp"
            android:text="5"
            android:textColor="@color/prompt_color"
            android:textSize="@dimen/title_text_size" />

        <FrameLayout
            android:id="@+id/game_rank_5_icon_layout"
            android:layout_toRightOf="@id/game_rank_5_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/game_rank_5_icon"
                android:layout_width="66.7dp"
                android:layout_height="66.7dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_4n"/>

            <ImageView
                android:id="@+id/game_rank_5_icon_stickgame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/market_icon_game"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/game_rank_5_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/game_rank_5_icon_layout"
            android:paddingLeft="10dp"
            android:paddingTop="16.7dp">

            <TextView
                android:id="@+id/game_rank_5_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:id="@+id/game_rank_5_download_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/game_rank_5_name"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/prompt_color"
                android:textSize="@dimen/content_text_size" />

            <TextView
                android:id="@+id/game_rank_5_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/game_rank_5_name"
                android:layout_toRightOf="@id/game_rank_5_download_no"
                android:singleLine="true"
                android:textColor="@color/prompt_color"
                android:textSize="@dimen/content_text_size" />

        </RelativeLayout>

        <Button
            android:id="@+id/game_rank_5_btn"
            android:layout_width="56.7dp"
            android:layout_height="26.7dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_blue_bg"
            android:text="下载"
            android:textColor="@color/theme_auxiliary_color"
            android:textSize="@dimen/btn_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/game_rank_5_icon_layout"
            android:background="#dddddd" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43.4dp"
        android:layout_below="@id/rank_layout_5"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rank_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:textColor="@color/prompt_color"
            android:textSize="@dimen/btn_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_below="@id/rank_layout_5"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6.6dp"
            android:layout_toRightOf="@id/rank_more"
            android:background="@drawable/public_arrow_right" />
    </LinearLayout>

</RelativeLayout>

