<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.baofeng.mj.ui.view.AppTitleBackView
        android:id="@+id/player_type_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white_title_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/player_type_normal"
            style="@style/public_account_list_style">

            <TextView
                style="@style/public_account_list_text_style"
                android:text="@string/player_mode_normal"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/player_type_normal_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@drawable/path_selected_icon"
                android:layout_marginRight="20dp" />
        </RelativeLayout>

        <View
            android:id="@+id/pro_line"
            style="@style/public_setting_list_line_style" />
        <RelativeLayout
            android:id="@+id/player_type_vr"
            style="@style/public_account_list_style">

            <TextView
                style="@style/public_account_list_text_style"
                android:text="@string/player_mode_vr"
                android:layout_marginLeft="20dp" />


            <ImageView
                android:id="@+id/player_type_vr_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/path_selected_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            style="@style/public_setting_list_line_style" />
    </LinearLayout>

</LinearLayout>
