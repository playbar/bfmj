<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_account_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="13dip"
    android:paddingBottom="20dip"
    android:visibility="visible">

    <TextView
        android:id="@+id/account_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Alex壮志凌云Alex壮志凌云"
        android:textSize="15sp"
        android:textColor="#dedede"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/account_user_name"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_modou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@drawable/my_icon_bean"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="魔豆 235"
            android:textColor="#d1d1d1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_mo_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/my_icon_coin"
            android:text="魔币 23"
            android:textColor="#d1d1d1"/>
    </LinearLayout>

</RelativeLayout>
