<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.baofeng.mj.ui.view.AppTitleView
        android:id="@+id/choiceness_app_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/public_main_title_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_main_title_height"
        android:background="@color/white"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/local_mobile"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <TextView
                android:id="@+id/local_mobile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="手机存储"
                android:textSize="13.33sp"
                android:textColor="@color/tab_normal_text_color" />
            <ImageView
                android:id="@+id/local_mobile_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:src="@drawable/pubilc_tab_long_line_higlight"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/local_download"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/local_download_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="下载"
                    android:textSize="13.33sp"
                    android:textColor="@color/tab_normal_text_color" />
                <ImageView
                    android:id="@+id/local_download_red_point"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="right|top"
                    android:src="@drawable/red_point_bg"
                    android:visibility="gone"/>
            </FrameLayout>
            <ImageView
                android:id="@+id/local_download_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:src="@drawable/pubilc_tab_line_higlight"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/local_fly"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/local_fly_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="飞屏"
                    android:textSize="13.33sp"
                    android:textColor="@color/tab_normal_text_color" />
                <ImageView
                    android:id="@+id/local_fly_red_point"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="right|top"
                    android:src="@drawable/red_point_bg"
                    android:visibility="gone"/>
            </FrameLayout>
            <ImageView
                android:id="@+id/local_fly_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:src="@drawable/pubilc_tab_line_higlight"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/local_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
