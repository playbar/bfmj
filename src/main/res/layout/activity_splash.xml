<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:android_custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">

	<!--<ImageView-->
		<!--android:id="@+id/iv_splash"-->
		<!--android:layout_width="match_parent"-->
		<!--android:layout_height="match_parent"-->
		<!--android:scaleType="fitXY"-->
		<!--android:background="@android:color/white"/>-->
	<com.baofeng.mj.ui.view.FlashView
		android:layout_width="match_parent"
		android:scaleType="fitXY"
		android:id="@+id/iv_splash"
		android:layout_height="match_parent" />

	<FrameLayout
		android:id="@+id/fl_jump"
		android:layout_width="52dp"
		android:layout_height="52dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_marginTop="10dp"
		android:layout_marginRight="10dp"
		android:background="@drawable/purple_round_bg"
		android:visibility="gone">

		<com.baofeng.mj.ui.view.RoundProgressBar
			android:id="@+id/roundProgressBar"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_gravity="center"
			android_custom:roundColor="@color/theme_main_color"
			android_custom:roundProgressColor="@android:color/white"
			android_custom:roundWidth="1.2dp"
			android_custom:max="3000"
			android_custom:startAngle="270"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="跳过"
			android:textColor="@android:color/white"
			android:textSize="10sp" />

	</FrameLayout>
</RelativeLayout>
