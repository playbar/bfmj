<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/recharge_success"
        android:textColor="@color/title_color"
        android:textSize="@dimen/title_text_size" />

    <TextView
        android:id="@+id/modou_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/content_color"
        android:textSize="@dimen/btn_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:text="第三方充值到账需要一点时间,"
        android:textColor="@color/content_color"
        android:textSize="@dimen/btn_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="5dp"
        android:text="请耐心等待"
        android:textColor="@color/content_color"
        android:textSize="@dimen/btn_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_view_recharge_record"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/app_translucent_listview_selector"
            android:gravity="center"
            android:text="@string/view_recharge_record"
            android:textColor="@color/content_color"
            android:textSize="@dimen/btn_text_size" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/divider_color" />

        <Button
            android:id="@+id/ok"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/theme_main_color"
            android:textSize="@dimen/btn_text_size" />
    </LinearLayout>

</LinearLayout>