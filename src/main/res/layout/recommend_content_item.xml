<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/content_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@drawable/recommend_content_default_bg"/>
        <ImageView
            android:id="@+id/alpha_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mask_bg"
            android:layout_alignBottom="@+id/content_image"/>
        <ImageView
            android:id="@+id/play_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/recommend_icon_play"/>
        <TextView
            android:id="@+id/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/content_image"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/content_image"
            android:layout_alignRight="@+id/content_image"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/video_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:paddingTop="1dp"
                android:background="@drawable/recommend_icon_bg"/>
            <TextView
                android:id="@+id/video_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:paddingTop="1dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/recommend_icon_bg"/>
        </LinearLayout>
        <TextView
            android:id="@+id/collection_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginRight="15dp"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:shadowColor="#FF000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/icon_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/collection_count"
            android:background="@drawable/recommend_star"/>
    </RelativeLayout>
</FrameLayout>
