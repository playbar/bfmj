<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_translucent_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/guide_noglas_shop_textview"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="50dp"
            android:text="@string/guide_noglas_go_shop"
            android:gravity="center"
            android:textSize="13.33sp"
            android:textColor="@color/theme_main_color"/>

        <TextView
            android:id="@+id/guide_noglas_skip_textview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/guide_noglas_skip"
            android:gravity="center"
            android:textSize="13.33sp"
            android:textColor="@color/theme_main_color"/>

        <View
           style="@style/divider_line"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/guide_noglas_cancel_textview"
            android:layout_width="match_parent"
            android:layout_height="43.33dp"
            android:textColor="@color/content_color"
            android:gravity="center"
            android:textSize="13.33sp"
            android:text="取消" />
    </LinearLayout>

</RelativeLayout>