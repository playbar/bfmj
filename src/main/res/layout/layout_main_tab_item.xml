<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical">

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/imageView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="6.67dp"
			android:layout_marginBottom="6dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			tools:src="@drawable/tab_choice"/>
		<TextView
			android:id="@+id/tv_red_point"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right|top"
			android:background="@drawable/red_point_bg"
			android:paddingTop="0.4dp"
			android:paddingBottom="1.1dp"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:text="@null"
			android:textSize="9sp"
			android:textColor="@android:color/white"
			android:visibility="gone"/>
	</FrameLayout>

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/purple_black_bg_color"
		android:textSize="@dimen/warn_text_size"/>

</LinearLayout>
