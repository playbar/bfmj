<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.handmark.pulltorefresh.library.PullToRefreshRecyle xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/choice_list_pulltorefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        ptr:ptrAnimationStyle="flip"
        android:scrollbars="none"
        ptr:ptrHeaderBackground="@color/app_pulltorefresh_green"
        ptr:ptrMode="pullFromStart">

    </com.handmark.pulltorefresh.library.PullToRefreshRecyle>
</LinearLayout>
