<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.baofeng.mj.ui.view.AppTitleBackView
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white_title_bg" />

    <RadioGroup
        android:id="@+id/live_video_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <RadioButton
            android:id="@+id/latest"
            style="@style/vidio_long_tab_text_style"
            android:layout_weight="1"
            android:text="最新" />

        <RadioButton
            android:id="@+id/hottest"
            style="@style/vidio_long_tab_text_style"
            android:layout_weight="1"
            android:text="最热" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/live_video_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
